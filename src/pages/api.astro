<!DOCTYPE html>
<html>
<head>
    <title>Simple API Test</title>
</head>
<body>

<h2>Test API</h2>

<button onclick="getTest()">GET Test</button>
<button onclick="postTest()">POST Test</button>

<p id="result">1) element defined - No Value Set yet</p>

<script>
document.getElementById("result").textContent = "2) Script Init - No value set"

function getTest() {
    fetch("http://localhost:3000/api/test")
        .then(res => res.json())
        .then(data => {
            document.getElementById("result").textContent =
                JSON.stringify(data);
        });
}

function postTest() {
    fetch("http://localhost:3000/api/echo", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({ testValue: "Hello API" })
    })
    .then(res => res.json())
    .then(data => {
        document.getElementById("result").textContent =
            JSON.stringify(data);
    });
}
</script>

</body>
</html>